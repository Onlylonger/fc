{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node10",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
