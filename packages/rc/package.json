{
  "name": "@shilong/rc",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "author": "Barry",
  "description": "React UI and relative utils",
  "keywords": [
    "react",
    "react-component",
    "ui",
    "a11y",
    "hooks"
  ],
  "version": "0.1.5",
  "type": "module",
  "exports": {
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./icons": {
      "import": "./dist/icons/index.js",
      "types": "./dist/icons/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:js\" \"npm run dev:css\"",
    "dev:js": "tsc -w",
    "dev:css": "tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "copy-css": "npx copyfiles -u 1 src/style.css dist/",
    "build": "tsc && tailwindcss -i ./src/style.css -o ./dist/style.css",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@types/react": "^17 || ^18 || ^19",
    "react": "^17 || ^18 || ^19",
    "react-dom": "^17 || ^18 || ^19"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@floating-ui/react": "^0.27.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.476.0",
    "sonner": "^2.0.1",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@sl/tsconfig": "workspace:^",
    "@tailwindcss/cli": "^4.0.15",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0"
  }
}
